@page
@model KinopoiskWeb.Pages.Movies.IndexModel
@{
}
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .filter-container {
            margin-bottom: 20px;
        }

            .filter-container .form-group {
                margin-bottom: 15px;
            }
    </style>
</head>
<h1>Movies</h1>

<div class="filter-container">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="titleFilter">Title:</label>
                <select id="titleFilter" class="filter-input select2 form-control"></select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="releasedDateFilter">Released Date:</label>
                <input type="date" id="releasedDateFilter" class="filter-input form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="countryFilter">Country:</label>
                <select id="countryFilter" class="filter-input select2 form-control"></select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="actorFilter">Actor:</label>
                <select id="actorFilter" class="filter-input select2 form-control"></select>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="directorFilter">Director:</label>
                <select id="directorFilter" class="filter-input select2 form-control"></select>
            </div>
        </div>
    </div>
</div>

<table id="moviesTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>Poster</th>
            <th>Title</th>
            <th>Description</th>
            <th>Released Date</th>
            <th>Duration</th>
            <th>IMDB Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>
@Html.AntiForgeryToken()

@section Scripts {
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @await Html.PartialAsync("Shared/_Urls")
    <script src="~/js/Movie/indexMovie.js" asp-append-version="true"></script>
}
