@page
@model KinopoiskWeb.Pages.Movies.IndexModel
@{
}
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .main-container {
            display: flex;
            padding: 20px;
            width: 100%;
            background-color: #f8f9fa;
            box-sizing: border-box; /* Ensure padding is included in the element's total width and height */
        }

        .filter-container {
            margin-top: 100px;
            width: 20%;
            padding: 20px;
            overflow-y: auto;
        }

            .filter-container .form-group {
                margin-bottom: 10px;
            }

        .content-container {
            flex: 1;
            padding: 20px;
            width: 80%;
        }

            .content-container h1 {
                margin-top: 0;
            }
    </style>
</head>
<div class="main-container">
    <div class="filter-container">
        <div class="form-group">
            <label for="titleFilter">Title:</label>
            <input type="text" id="titleFilter" class="filter-input form-control" placeholder="Enter title">
        </div>
        <div class="form-group">
            <label for="releasedDateFilter">Released year:</label>
            <select id="releasedDateFilter" name="releasedDateFilter" class="filter-input form-control">
                <option value="">All Years</option>
                @for (int year = DateTime.Now.Year; year >= 1900; year--)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="countryFilter">Country:</label>
            <select asp-for="DataTablesRequest.Country" id="countryFilter" class="filter-input select2 form-control"></select>
        </div>
        <div class="form-group">
            <label for="actorFilter">Actor:</label>
            <select asp-for="DataTablesRequest.Actor" id="actorFilter" class="filter-input select2 form-control"></select>
        </div>
        <div class="form-group">
            <label for="directorFilter">Director:</label>
            <select asp-for="DataTablesRequest.Director" id="directorFilter" class="filter-input select2 form-control"></select>
        </div>
    </div>

    <div class="content-container">
        <h1>Movies</h1>

        <table id="moviesTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>Poster</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Released Date</th>
                    <th>Duration</th>
                    <th>IMDB Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
        @Html.AntiForgeryToken()
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @await Html.PartialAsync("Shared/_Urls")
    <script src="~/js/Movie/indexMovie.js" asp-append-version="true"></script>
}
