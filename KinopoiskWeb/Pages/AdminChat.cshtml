@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model KinopoiskWeb.Pages.AdminChatModel
@{
}
<div class="admin-chat-container">
    <div class="admin-chat-list">
        <h3 class="admin-chat-list-header">@Localizer["ActiveChats"]</h3>
        <ul id="adminUserList" class="admin-user-list">
        </ul>
    </div>

    <div class="admin-chat-window">
        <div class="admin-chat-header">
            <span id="adminChatUserName">@Localizer["SelectUser"]</span>
        </div>
        <div id="adminChatMessages" class="admin-chat-messages"></div>
        <div class="admin-chat-input">
            <input type="text" id="adminMessageInput" placeholder="@Localizer["TypeMessage"]" />
            <button id="adminSendButton">@Localizer["Send"]</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.18/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/supportChatAdmin.js"></script>
}