@page
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Pages.Account.LoginModel> Localizer
@model LoginModel

<h2>@Localizer["Login"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Email">@Localizer["Email"]</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password">@Localizer["Password"]</label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["Login"]</button>
</form>
